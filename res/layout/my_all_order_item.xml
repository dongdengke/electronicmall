<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ffffff"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_good_icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
       />

    <TextView
        android:id="@+id/tv_allorder_orderno_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_good_icon"
        android:text="订单号："
        android:textColor="#000000"
        android:textSize="18sp" />
        <TextView
        android:id="@+id/tv_allorder_orderno_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_allorder_orderno_name_text"
        android:text="1112020049"
        android:textColor="#88000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_allorder_goodname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_allorder_orderno_name_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_good_icon"
        android:text="商品名称:"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_allorder_goodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_allorder_orderno_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_allorder_goodname_text"
        android:text="奶粉"
        android:textColor="#88000000"
        android:textSize="16sp" />
    

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow_next"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
               android:layout_below="@id/tv_allorder_orderno_name"
        android:layout_toRightOf="@id/tv_allorder_goodname"
       />
    <TextView
        android:id="@+id/tv_receive_good_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_allorder_goodname_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_good_icon"
        android:text="收货人:"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/tv_receive_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_allorder_goodname_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_receive_good_name_text"
        android:text="dong"
        android:textColor="#88000000"
        android:textSize="16sp" />



</RelativeLayout>