<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_frame_id"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/empty_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shopping_cart_is_null" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginTop="40.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/go_favor_tv"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@drawable/public_bg_btn_white"
                android:gravity="center"
                android:text="去收藏夹"
                android:textColor="@color/pub_color_nine" />

            <TextView
                android:id="@+id/go_home_tv"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30.0dip"
                android:layout_weight="0.5"
                android:background="@drawable/public_bg_btn_orange"
                android:gravity="center"
                android:text="去逛逛"
                android:textColor="@color/pub_color_one" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>